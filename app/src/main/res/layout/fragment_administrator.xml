<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Administrator">
<Button
    android:id="@+id/Price"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="45dp"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:text="Milk price"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <TextView

        android:id="@+id/noRecords"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@id/Price"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/generate_report"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_below="@id/noRecords"
        android:text="Generate Milk Report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/milk_report"
        android:layout_below="@id/generate_report"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>






</RelativeLayout>