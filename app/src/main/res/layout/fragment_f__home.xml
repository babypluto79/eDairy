<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".User_Farmer">


    <TextView
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/user_farmer_name"
        android:layout_width="wrap_content"
        android:textColor="#000"

        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/user_farmer_phone"
        android:layout_below="@id/user_farmer_name"
        android:layout_width="wrap_content"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/tip"
        android:layout_below="@id/user_farmer_phone"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/withdraw"
        android:layout_below="@id/tip"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ListView
        android:id="@+id/farmer_records"
        android:layout_below="@id/withdraw"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:background="#888"
        android:layout_marginEnd="5dp"
        android:padding="20dp"
        android:layout_marginStart="5dp"
        android:divider="#012"
        android:dividerHeight="10dp"
        android:layout_height="wrap_content"/>



</RelativeLayout>