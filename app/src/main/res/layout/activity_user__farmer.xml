<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Farmer">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tool_bar"
        android:layout_alignParentTop="true"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:background="#444"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:id="@+id/user_farmer_name"
        android:layout_below="@id/tool_bar"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:textColor="#000"

        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:id="@+id/user_farmer_phone"
        android:layout_below="@id/user_farmer_name"
        android:layout_width="wrap_content"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tool_bar"
        android:layout_width="wrap_content"
        android:text="Amount of milk :"
        android:layout_marginEnd="15dp"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/amount"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:textColor="#000"
        android:textStyle="normal"
        android:layout_below="@id/text"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/price"
        android:layout_below="@id/amount"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="12dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/memoi"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_below="@id/price"
        android:layout_marginEnd="22dp"
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/withdraw"
        android:layout_below="@id/memoi"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="28dp"
        android:text="Withdraw"
        android:textColor="#254"
        android:layout_marginTop="15dp"
        android:textStyle="italic|bold"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/farmer_records"
        android:layout_below="@id/withdraw"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:background="#777"
        android:layout_marginEnd="5dp"
        android:padding="20dp"
        android:layout_marginStart="5dp"
        android:divider="#ffffff"
        android:dividerHeight="20dp"
        android:layout_height="wrap_content"/>



</RelativeLayout>