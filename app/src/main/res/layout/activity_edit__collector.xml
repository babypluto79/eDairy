<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_Collector">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tool_bar"
        android:layout_alignParentTop="true"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:background="#444"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />
    <TextView
        android:id="@+id/firstname_hint"
        android:text="Firstname"
        android:layout_below="@id/tool_bar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/tool_bar"
        android:textSize="18sp"
        android:id="@+id/collector_firstname"
       android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_toEndOf="@id/firstname_hint"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@id/firstname_hint"
        android:layout_marginEnd="20dp"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/lastname_hint"
        android:text="Lastname"
        android:layout_below="@+id/firstname_hint"
        android:layout_marginTop="8dp"
        android:layout_marginStart="15dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/collector_lastname"
        android:layout_below="@id/collector_firstname"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/lastname_hint"
        android:layout_alignBottom="@id/lastname_hint"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/email_hint"
        android:text="Email"
        android:layout_below="@+id/lastname_hint"
        android:layout_marginTop="8dp"
        android:layout_marginStart="15dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/collector_email"
        android:layout_below="@id/collector_lastname"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/email_hint"
        android:layout_alignBottom="@id/email_hint"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/village_hint"
        android:text="Village"
        android:layout_below="@+id/email_hint"
        android:layout_marginTop="8dp"
        android:layout_marginStart="15dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/collector_village"
        android:layout_below="@id/collector_email"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/village_hint"
        android:layout_alignBottom="@id/village_hint"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/phone_hint"
        android:text="Phone"
        android:layout_below="@+id/village_hint"
        android:layout_marginTop="8dp"
        android:layout_marginStart="15dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/collector_phone"
        android:layout_below="@id/collector_village"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/phone_hint"
        android:layout_alignBottom="@id/phone_hint"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/id_hint"
        android:text="National id"
        android:layout_below="@+id/phone_hint"
        android:layout_marginTop="8dp"
        android:layout_marginStart="15dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/collector_id"
        android:layout_below="@id/collector_phone"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/id_hint"
        android:layout_alignBottom="@id/id_hint"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="Hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>